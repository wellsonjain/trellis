<div class="container">
  <div class="page-header">
    <h3>Sign In</h3>
  </div>

  <% unless alert.nil? %>
    <div class="alert alert-danger" role="alert">
      <%= alert %>
    </div>
  <% end %>

  <%= bootstrap_form_for resource, as: resource_name, url: session_path(resource_name), layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-4' do |f| %>
    <% if alert.nil? %>
      <%= f.email_field :email, placeholder: 'E-mail', prepend: fa_icon('envelope-o fw'), autofocus: true %>
      <%= f.password_field :password, placeholder: 'Password', prepend: fa_icon('key fw'), autocomplete: 'off' %>
    <% else %>
      <%= f.email_field :email, placeholder: 'E-mail', prepend: fa_icon('envelope-o fw'), autofocus: true, wrapper_class: 'has-error' %>
      <%= f.password_field :password, placeholder: 'Password', prepend: fa_icon('key fw'), autocomplete: 'off', wrapper_class: 'has-error' %>
    <% end %>
    <%= f.form_group :remember_me do %>
      <%= f.check_box :remember_me %>
    <% end %>
    <%= f.form_group do %>
      <%= f.primary 'Sign In' %>
      <%= render 'devise/shared/links' %>
    <% end %>
  <% end %>
</div>
